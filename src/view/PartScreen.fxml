<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="controller.PartScreenController" style="-fx-background-color: lightgrey">
    <children>

        <Label fx:id="titleLabel" alignment="BASELINE_LEFT" text="Add Part"
               style="-fx-padding: 30px; -fx-font-weight: bold; -fx-text-fill: navy; -fx-wrap-text: true;">
            <font>
                <Font name="Arial" size="16.0"/>
            </font>
        </Label>

        <RadioButton fx:id="inHouseRadioButton" layoutX="180.0" layoutY="30.0" mnemonicParsing="false"
                     onAction="#setInHouse" selected="true" text="In-House"/>
        <RadioButton fx:id="outsourcedRadioButton" layoutX="300.0" layoutY="30.0" mnemonicParsing="false"
                     onAction="#setOutsourced" text="Outsourced"/>

        <GridPane layoutX="100" layoutY="100" hgap="60" vgap="15">
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="ID" style="-fx-font-size: 14;"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="idField" prefHeight="40.0"
                       prefWidth="175.0" promptText="Auto Gen - Disabled"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Name" style="-fx-font-size: 14;"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="nameField" prefHeight="40.0"
                       prefWidth="175.0" promptText="Part Name"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Inv" style="-fx-font-size: 14;"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="invField" prefHeight="40.0"
                       prefWidth="175.0" promptText="Inv"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Price/Cost" style="-fx-font-size: 14;"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="priceCostField" prefHeight="40.0"
                       prefWidth="175.0" promptText="Price/Cost"/>

        </GridPane>

        <AnchorPane layoutX="90" layoutY="325" prefHeight="0" prefWidth="0">
            <children>
                <Label layoutX="10" layoutY="10" text="Max" style="-fx-font-size: 14;"/>

                <TextField fx:id="maxField" layoutX="140" layoutY="0" prefHeight="40.0" prefWidth="100.0"
                           promptText="Max"/>
                <Label layoutX="250" layoutY="10" text="Min" style="-fx-font-size: 14;"/>
                <TextField fx:id="minField" layoutX="290" layoutY="0" prefHeight="40.0" prefWidth="100.0"
                           promptText="Min"/>

                <Label layoutX="10" layoutY="70" fx:id="machineIdOrCompanyNameLabel" text="Machine ID"
                       style="-fx-font-size: 14;"/>
                <TextField layoutX="140" layoutY="60" fx:id="machineIdOrCompanyNameField" prefHeight="40.0"
                           prefWidth="170.0" promptText="Machine ID"/>

                <Button onAction="#handleSave" alignment="BASELINE_CENTER" text="Save"
                        minWidth="110" minHeight="40" layoutX="140" layoutY="160"
                        style="-fx-font-weight: bold; -fx-text-fill: black; -fx-background-color: white;">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                </Button>

                <Button onAction="#handleCancel" alignment="BASELINE_CENTER" text="Cancel"
                        minWidth="110" minHeight="40" layoutX="265" layoutY="160"
                        style="-fx-font-weight: bold; -fx-text-fill: black; -fx-background-color: white;">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
